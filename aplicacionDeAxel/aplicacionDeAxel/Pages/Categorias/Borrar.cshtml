@page
@model aplicacionDeAxel.Pages.Categorias.BorrarModel
@{
    ViewData["Title"] = "Borrando una categoria";
}

<table id="tblCategorias" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(v => v.Categoria.Id)</th>
            <th>@Html.DisplayNameFor(v => v.Categoria.NombreCategoria)</th>
            <th>@Html.DisplayNameFor(v => v.Categoria.FechaCreacion)</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(v => Model.Categoria.Id)</td>
            <td>@Html.DisplayFor(v => Model.Categoria.NombreCategoria)</td>
            <td>@Html.DisplayFor(v => Model.Categoria.FechaCreacion)</td>

        </tr>
    </tbody>
</table>

<div class="row mt-2">
      <div class="col-1">
        <form method="POST">
            <input type="hidden" asp-for="Categoria.Id" />
            <input type="hidden" asp-for="Categoria.NombreCategoria" />
            <button type="submit" class="btn btn-danger"> Borrar </button>
        </form>
    </div>

    <div class="col-1">
        <a asp-page="Index" class="btn btn-success">Volver</a>
    </div>
</div>

