@page
@model aplicacionDeAxel.Pages.Categorias.IndexModel
@{
    ViewData["Title"] = "Lista de categorias";
}

<div class = "container">
    <div class = "row">
        <div class = "col-9">
            <h2 class = "text-info"> Lista de Categorias</h2>
        </div>
         <div class = "col-3">
            <a class = "btn btn-secondary" asp-page = "/Categorias/Crear">Crear nueva categoria</a>
        </div>
    </div>
    <br />
    <br />
    @if(Model.Categorias.Count() > 0)
    {
        <table id="tblCategorias" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(v => v.Categorias.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(v => v.Categorias.FirstOrDefault().NombreCategoria)</th>
                    <th>@Html.DisplayNameFor(v => v.Categorias.FirstOrDefault().FechaCreacion)</th>
                    <th></th>
                </tr>
            </thead>
            
            @foreach(var Categoria in Model.Categorias)
            {
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(v => Categoria.Id)</td>
                        <td>@Html.DisplayFor(v => Categoria.NombreCategoria)</td>
                        <td>@Html.DisplayFor(v => Categoria.FechaCreacion)</td>
                        <td>

                            <a class="btn btn-success" asp-page="../Categorias/Detalle" asp-route-id="@Categoria.Id">Detalle</a>
                            <a class="btn btn-danger" asp-page="../Categorias/Borrar" asp-route-id="@Categoria.Id">Borrar</a>
                            <a class="btn btn-warning" asp-page="../Categorias/Editar" asp-route-id="@Categoria.Id">Modificar</a>

                        </td>
                    </tr>
                </tbody>   
            }

        </table>
        
    }
    else
    {
        <p>No existen categorias.</p>
        <p>Para agregar una nueva categoria haga click en el boton "Crear nueva Categoria".</p>
    }

</div>